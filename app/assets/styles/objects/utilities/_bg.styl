.u-bg
  &_gray
    background-color #eeeeee
    background-image url('../images/bg_jazz_white.png')
  &_white
    background-color white
    background-image url('../images/bg_jazz_yellow.png')
    &:before
      content ''
      position absolute
      display block
      width 100%
      height 100%
      z-index 0
      background-color rgba(255, 255, 255, 0.93)
[class*="u-bg_"]
  position relative
  background-repeat repeat