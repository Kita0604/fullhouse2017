.p-time_schedule
  .schedule_main_container
    background-color #eeeeee
    background-image url('../images/bg_jazz_yellow.png')
    background-repeat repeat
    position relative
    padding-bottom 20px
    &::before
      content: '';
      position: absolute;
      display: block;
      width: 100%;
      height: 100%;
      z-index: 0;
      background-color: rgba(255,255,255,.93);
  .schedule_top_container
    padding-top 50px
    height 113px
    //border-top 1px solid #8c8c8c
    //border-bottom: 1px dashed #d8d8d8;
    //border-bottom 2px solid #8c8c8c
    .schedule_top_inner
      display flex
      max-width 1000px
      margin 0 auto
      margin-top 13px
    .schedule_top_inner_tab
      width 100%
      text-align center
      font-size 20px
      font-weight bold
      padding 10px 0px
      cursor pointer
      transition all 0.2s ease
      //border-radius 10px 10px 0px 0px
      border: 1px solid #f3f3f3;
      font-family: Belleza,sans-serif;
      // margin: 0px 8px;
      // border: 2px solid rgb(62, 62, 62);
      &.is_active
        // border 2px solid #d8d8d8
        // border-bottom none
        /* border: 2px solid #d8d8d8; */
        /* border-bottom: none; */
        position: relative;
        display: inline-block;
        padding: 7px 10px;
        min-width: 120px;
        max-width: 100%;
        color: #555;
        background: #e0edff;
        border: 2px solid #e0edff;
        //color white
        &::before
          content: "";
          position: absolute;
          top: 100%;
          left: 50%;
          margin-left: -15px;
          border: 15px solid transparent;
          border-top: 15px solid #e0edff;
          z-index: 1;
      &:nth-child(1)
        &.is_active
          background: #eeeeee;
          border: 2px solid #eeeeee;
          &::before
            border-top: 15px solid #eeeeee;
      &:nth-child(2)
        &.is_active
          background: #e0edff;
          border: 2px solid #e0edff;
          &::before
            border-top: 15px solid #e0edff;
      &:nth-child(3)
        &.is_active
          background: #ffe0e0;
          border: 2px solid #ffe0e0;
          &::before
            border-top: 15px solid #ffe0e0;

    .schedule_top_inner.is_follow
      position fixed
      background: white;
      margin-top: 0;
      top: 60px;
      z-index: 1;
      width: 100%;
      left: 50%;
      transform: translateX(-50%);
      box-shadow: 4px 0px 13px -2px rgba(58, 58, 58, 0.4);
      .schedule_top_inner_tab
        margin 0px
