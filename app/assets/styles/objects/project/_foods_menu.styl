.p-foods_menu
  .foods_main_container
    mincho()
    padding-bottom 40px
    background-image url('../images/bg_jazz_yellow.png')
    background-repeat repeat
    position relative
    &::before
      content: '';
      position: absolute;
      display: block;
      width: 100%;
      height: 100%;
      z-index: 0;
      background-color: rgba(255,255,255,.93);
  .foods_main_contents_h2
    font-family Belleza,sans-serif
  .foods_container_small_wrapper
    display flex
    @media $smtphn
      display block
  .foods_menu_container
    margin-top -10px
    @media $smtphn
      margin-top -5px
  .drink_menu_list
    list-style none
    margin -5px 0 0
    padding 0
    mincho()
    .drinks_menu
      padding 10px 0px 5px 0px
      margin-bottom 10px
      border-bottom 1px solid rgba(91, 8, 8, 0.13)
      font-weight bold
      display flex
      &_name,&_price
        width 100%
      &_name
        font-size 15px
        min-width 180px
      &_price
        text-align right
        font-size 17px